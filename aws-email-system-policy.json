{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SESEmailSending",
      "Effect": "Allow",
      "Action": [
        "ses:SendEmail",
        "ses:SendRawEmail",
        "ses:GetSendStatistics",
        "ses:GetSendQuota"
      ],
      "Resource": "*"
    },
    {
      "Sid": "SESEmailReceiving",
      "Effect": "Allow",
      "Action": [
        "ses:CreateReceiptRule",
        "ses:CreateReceiptRuleSet",
        "ses:DescribeReceiptRule",
        "ses:DescribeReceiptRuleSet",
        "ses:UpdateReceiptRule",
        "ses:SetActiveReceiptRuleSet"
      ],
      "Resource": "*"
    },
    {
      "Sid": "S3EmailStorage",
      "Effect": "Allow",
      "Action": [
        "s3:CreateBucket",
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject",
        "s3:ListBucket",
        "s3:PutBucketPolicy",
        "s3:GetBucketPolicy",
        "s3:PutBucketNotification"
      ],
      "Resource": [
        "arn:aws:s3:::iwishbag-emails",
        "arn:aws:s3:::iwishbag-emails/*"
      ]
    },
    {
      "Sid": "LambdaEmailProcessing",
      "Effect": "Allow",
      "Action": [
        "lambda:CreateFunction",
        "lambda:UpdateFunctionCode",
        "lambda:InvokeFunction",
        "lambda:AddPermission",
        "lambda:GetFunction"
      ],
      "Resource": "arn:aws:lambda:us-east-1:597088020156:function:process-email-*"
    },
    {
      "Sid": "IAMRoleForLambda",
      "Effect": "Allow",
      "Action": [
        "iam:CreateRole",
        "iam:AttachRolePolicy",
        "iam:PassRole"
      ],
      "Resource": "arn:aws:iam::597088020156:role/email-lambda-role"
    },
    {
      "Sid": "CloudWatchLogs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:us-east-1:597088020156:*"
    }
  ]
}