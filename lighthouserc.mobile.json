{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "startServerCommand": "npm run preview",
      "startServerReadyPattern": "Local:\\s+http://localhost",
      "startServerReadyTimeout": 60000,
      "url": [
        "http://localhost:4173/",
        "http://localhost:4173/quote-request",
        "http://localhost:4173/dashboard"
      ],
      "settings": {
        "preset": "mobile",
        "throttling": {
          "rttMs": 150,
          "throughputKbps": 1638,
          "cpuSlowdownMultiplier": 4
        },
        "emulatedFormFactor": "mobile",
        "formFactor": "mobile",
        "screenEmulation": {
          "mobile": true,
          "width": 375,
          "height": 667,
          "devicePixelRatio": 2,
          "disabled": false
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.75}],
        "categories:accessibility": ["error", {"minScore": 0.95}],
        "categories:best-practices": ["error", {"minScore": 0.90}],
        "categories:seo": ["error", {"minScore": 0.90}],
        "categories:pwa": ["warn", {"minScore": 0.8}],
        
        "first-contentful-paint": ["error", {"maxNumericValue": 2000}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 4000}],
        "interactive": ["error", {"maxNumericValue": 5000}],
        "speed-index": ["error", {"maxNumericValue": 3500}],
        "total-blocking-time": ["error", {"maxNumericValue": 300}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],
        
        "uses-long-cache-ttl": "off",
        "uses-text-compression": ["warn", {"minScore": 0.8}],
        "unused-css-rules": ["warn", {"maxLength": 4000}],
        "unused-javascript": ["warn", {"maxLength": 30000}],
        "modern-image-formats": ["warn", {"minScore": 0.8}],
        "offscreen-images": ["warn", {"minScore": 0.8}],
        "render-blocking-resources": ["warn", {"minScore": 0.8}],
        "unminified-css": ["error", {"minScore": 1.0}],
        "unminified-javascript": ["error", {"minScore": 1.0}],
        "efficient-animated-content": ["warn", {"minScore": 0.8}],
        "legacy-javascript": ["warn", {"minScore": 0.8}],
        "tap-targets": ["warn", {"minScore": 0.9}],
        "viewport": ["error", {"minScore": 1.0}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "serverBaseUrl": "http://localhost:4173"
  }
}