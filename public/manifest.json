{
  "name": "iwishBag - Global Shopping Assistant",
  "short_name": "iwishBag",
  "description": "Shop internationally from Amazon, Flipkart, eBay, Alibaba with iwishBag. Get quotes, track orders, and save on global shipping.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#FFFFFF",
  "theme_color": "#FF6B35",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["shopping", "business", "productivity"],
