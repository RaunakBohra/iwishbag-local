  "shortcuts": [
    {
      "name": "New Quote",
      "short_name": "Quote",
      "description": "Create a new quote request",
      "url": "/quote/new",
      "icons": [
        {
          "src": "/icons/shortcut-quote.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "My Quotes",
      "short_name": "Quotes", 
      "description": "View your quote history",
      "url": "/dashboard/quotes",
      "icons": [
        {
          "src": "/icons/shortcut-history.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Track Order",
      "short_name": "Track",
      "description": "Track your order status",
      "url": "/track",
      "icons": [
        {
          "src": "/icons/shortcut-track.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Support",
      "short_name": "Help",
      "description": "Contact customer support",
      "url": "/support",
      "icons": [
        {
          "src": "/icons/shortcut-support.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/quote/new",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "name",
      "text": "description", 
      "url": "product_url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+iwishbag",
      "url": "/quote/new?product_url=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"],
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.iwishbag.app",
      "id": "com.iwishbag.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/iwishbag/id123456789"
    }
  ]
}